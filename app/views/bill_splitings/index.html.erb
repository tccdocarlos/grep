<h1>Listing bill_splitings</h1>

<table>
  <tr>
    <th>Value</th>
    <th>total: <%= @bill_type.total_value %></th>
    <th>real: <%= @bill_type.value %></th>
  </tr>

<% @bill_splitings.each do |bill_spliting| %>
  <tr>
    <td><%= bill_spliting.value %></td>
    <td><%= link_to 'Show', [bill_spliting.bill_type, bill_spliting] %></td>
    <td><%= link_to 'Edit', edit_bill_type_bill_spliting_path(bill_spliting.bill_type, bill_spliting) %></td>
    <td><%= link_to 'Destroy', [bill_spliting.bill_type, bill_spliting], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

