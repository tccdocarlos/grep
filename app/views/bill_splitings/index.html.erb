<h1>Listing bill_splitings</h1>

<table>
  <tr>
    <th>Value</th>
    <th>total: <%= @bill_type.total_value %></th>
    <th>real: <%= @bill_type.value %></th>
  </tr>

<% @bill_splitings.each do |bill_spliting| %>
  <tr>
    <td><%= bill_spliting.value %></td>
    <td><%= link_to 'Show', [bill_spliting.bill_type, bill_spliting], class: "btn btn-primary float-right" %></td>
    <td><%= link_to 'Edit', edit_bill_type_bill_spliting_path(bill_spliting.bill_type, bill_spliting),  class: "btn btn-primary float-right" %></td>
    <td><%= link_to 'Destroy', [bill_spliting.bill_type, bill_spliting], :confirm => 'Are you sure?', :method => :delete,  class: "btn btn-danger float-right" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Bill spliting', new_bill_type_bill_spliting_path(params[:bill_type_id]), class: "btn btn-primary" %>
<div class="col-md-11 text-center">
  <%= link_to 'Back', bill_types_path, class: "btn btn-warning text-center" %>
</div>
