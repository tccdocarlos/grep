
<%= simple_form_for(@month_bill) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :month %>
    <%= f.input :status %>
    <%= f.input :house %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
